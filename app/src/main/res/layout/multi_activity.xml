<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="나이름들어가는곳"
                android:gravity="center"
                android:background="#73C3F1"
                android:textColor="#ffffff"
                android:textSize="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="나점수들어가는곳"
                android:background="#034DA2"
                android:textColor="#ffffff"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="너이름들어가는곳"
                android:gravity="center"
                android:background="#ff6363"
                android:textColor="#ffffff"
                android:textSize="10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="너점수들어가는곳"
                android:gravity="center"
                android:background="#cd0000"
                android:textColor="#ffffff"
                android:textSize="10dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:paddingBottom="4dp"
            android:paddingTop="4dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:orientation="horizontal"
            android:id="@+id/oppositeLayout">


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="남은시간"
            android:gravity="center"
            android:background="#74D36D"
            android:textColor="#ffffff"
            android:textSize="10dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="4dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="4dp"
        android:background="#73C3F1"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mcombo1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#f8bbd0" />

        <ImageView
            android:id="@+id/mcombo2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#f48fb1" />

        <ImageView
            android:id="@+id/mcombo3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#ff87be" />

        <ImageView
            android:id="@+id/mcombo4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#ff7dc8" />

        <ImageView
            android:id="@+id/mcombo5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#ff73be" />

        <ImageView
            android:id="@+id/mcombo6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#ff69b4" />

        <ImageView
            android:id="@+id/mcombo7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#f06292" />

        <ImageView
            android:id="@+id/mcombo8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#ec407a" />

        <ImageView
            android:id="@+id/mcombo9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#e91e63" />

        <ImageView
            android:id="@+id/mcombo10"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#d81b60" />

        <ImageView
            android:id="@+id/mcombo11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#ad1457" />

        <ImageView
            android:id="@+id/mcombo12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/border_imageview"
            android:src="#880e4f" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingRight="20dp"
        android:background="#ffffff"
        android:id="@+id/mutiLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:textSize="25dp"
                android:text="상대를 기다립니다..."
                android:textStyle="bold"
                android:gravity="center"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:padding="40dp"
                android:scaleType="centerInside"
                android:src="@drawable/hourglass"/>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>